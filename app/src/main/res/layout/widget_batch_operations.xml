<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_card_bg1"
    android:padding="8dp">

    <!-- 启用按钮 -->
    <ImageView
        android:id="@+id/btn_enable"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:src="@drawable/icon_shortcut_enable"
        android:contentDescription="@string/batch_enable_apps"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless" />

    <!-- 禁用按钮 -->
    <ImageView
        android:id="@+id/btn_disable"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:src="@drawable/icon_shortcut_disable"
        android:contentDescription="@string/batch_disable_apps"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless" />

</RelativeLayout>